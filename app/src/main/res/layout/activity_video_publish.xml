<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/background"
              android:orientation="vertical">

    <include layout="@layout/view_title"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        >

        <com.tencent.rtmp.ui.TXCloudVideoView
            android:id="@+id/video_view"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            />

        <EditText
            android:id="@+id/edit_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="15dp"
            android:layout_toRightOf="@id/video_view"
            android:background="@null"
            android:gravity="top"
            android:hint="@string/add_video_des"
            android:textColor="#fff"
            android:textColorHint="@color/gray2"
            android:textSize="16sp"
            android:maxLength="50"
            />

        <TextView
            android:id="@+id/length"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:text="0/50"
            android:textColor="@color/gray2"
            android:textSize="14sp"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="30dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:padding="3dp"
            android:src="@mipmap/icon_location"
            />

        <TextView
            android:id="@+id/city"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:hint="@string/no_location"
            android:singleLine="true"
            android:textColor="@color/gray2"
            android:textColorHint="@color/gray2"
            android:textSize="14sp"
            />

    </LinearLayout>
    <TextView
        android:id="@+id/tv_label"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="15sp"
        android:gravity="center_vertical"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        />
    <com.mibai.phonelive.flowlayout.TagFlowLayout
        android:id="@+id/flow_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        />
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <RadioButton
            android:id="@+id/btn_mf"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="免费"
            android:gravity="center_vertical"
            android:checked="true"
            android:textColor="@android:color/white"
            android:layout_marginLeft="12dp"
            android:paddingLeft="5dp"
            />
        <RadioButton
            android:id="@+id/btn_sf"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="收费"
            android:gravity="center_vertical"
            android:textColor="@android:color/white"
            android:layout_marginLeft="12dp"
            android:paddingLeft="5dp"
            />
    </RadioGroup>
    <LinearLayout
        android:id="@+id/ly_jb_setup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:orientation="vertical"
        android:visibility="gone"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="设置价格（金币）"
            android:textColor="#8d8d8d"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            />
        <EditText
            android:id="@+id/ed_jb"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:inputType="number"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_ed_jb"
            android:textColor="@android:color/white"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/share_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:text="@string/share_to"
        android:textColor="@color/gray2"
        android:textSize="14sp"
        android:visibility="gone"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:overScrollMode="never"
        android:visibility="gone"
        />


    <TextView
        android:id="@+id/btn_publish"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/bg_login_btn"
        android:gravity="center"
        android:text="@string/comfirm_publish"
        android:textColor="#fff"
        android:textSize="16sp"
        />

</LinearLayout>