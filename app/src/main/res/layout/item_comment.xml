<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    >
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/space_20"
        android:layout_marginLeft="@dimen/space_24"
        android:layout_marginRight="@dimen/space_24"
        >
        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_head"
                android:layout_width="@dimen/space_120"
                android:layout_height="@dimen/space_120"
                android:src="@mipmap/ic_launcher"
                />
        </com.zhy.autolayout.AutoRelativeLayout>
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:layout_marginLeft="@dimen/space_16"
            android:orientation="vertical"
            >
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/tv_nick_name"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="嘟嘟"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/font_size_30px"
                        android:gravity="center_vertical"
                        android:layout_marginTop="@dimen/space_16"
                        />
                    <TextView
                        android:id="@+id/tv_love"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="@color/colorDeep"
                        android:textSize="@dimen/font_size_30px"
                        android:visibility="invisible"
                        android:gravity="center_vertical|right"
                        android:text="0"
                        android:drawablePadding="@dimen/space_16"
                        android:drawableLeft="@mipmap/icon_comment_love"
                        android:layout_marginTop="@dimen/space_16"
                        android:layout_marginRight="@dimen/space_24"
                        />
                </LinearLayout>
                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/space_10"
                    >
                    <TextView
                        android:id="@+id/tv_location"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:drawableLeft="@mipmap/icon_location"
                        android:text="北京"
                        android:visibility="gone"
                        android:gravity="center_vertical"
                        android:drawablePadding="@dimen/space_16"
                        android:textColor="@color/colorDeep"
                        android:textSize="@dimen/font_size_24px"
                        />
                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="3分钟前"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="@dimen/space_24"
                        android:textColor="@color/colorDeep"
                        android:textSize="@dimen/font_size_24px"
                        />
                </com.zhy.autolayout.AutoLinearLayout>
            </com.zhy.autolayout.AutoLinearLayout>
            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/space_10"
                android:textSize="@dimen/font_size_26px"
                android:textColor="@color/colorDeep"
                android:text="味觉的记忆总是非常深刻，获取女孩子们对一家甜品店普记忆犹新，是一种幸福甜蜜的体会"
                />

        </com.zhy.autolayout.AutoLinearLayout>
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
           >
            <ImageView
                android:id="@+id/img_more"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_more_tree"
                android:visibility="invisible"
                android:layout_marginTop="@dimen/space_16"
                />
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>


</com.zhy.autolayout.AutoLinearLayout>